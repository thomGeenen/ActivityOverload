
<div class="container custom-container">
  <form action="/session/create" method="POST" class="form-group form-signin" id="form sign-up-form">
    <h2>Sign In</h2>

    <% if(flash && flash.err) { %>
        <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach((err) => { %>
            <li>
            <%- JSON.stringify(flash.err[err]) %>
            </li>
            <% }); %>
        </ul>
        <%  }  %>

        <div class="control-group">
          <input type="email" name="email" id="email" class="form-control" placeholder="Your Email" />
        </div>

        <div class="control-group">
          <input type="password" name="pass" id="pass" placeholder="*********" class="form-control" />
        </div>

        <input type="submit" value="Sign In" class="btn btn-lg btn-primary" />

        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>
</div>
