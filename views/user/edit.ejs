
<div class="container custom-container">
  <form action="/user/update/<%= user.id %>" method="POST" class="form-group form-signin" id="form">
    <h2>Edit User : <%= user.name %></h2>


    <div class="control-group">
      <input type="text" name="name" id="name" value="<%= user.name %>" class="form-control" />
    </div>

    <div class="control-group">
      <input type="email" name="email" id="email" class="form-control" value="<%= user.email %>" />
    </div>

    <div class="control-group">
      <input type="text" name="title" id="title" value="<%= user.title %>" class="form-control" />
    </div>

    <div class="control-group">
      <input type="password" name="pass" id="pass" value="<%= user.pass %>" class="form-control" />
    </div>

    <div class="control-group">
      <input type="password" name="encryptedPass" id="encryptedPass" value="<%= user.encryptedPass %>" class="form-control" />
    </div>

    
    <input type="submit" value="Edit" class="btn btn-primary" />
    <a href="/" class="btn btn-secondary ">Cancel</a>


    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>
</div>
